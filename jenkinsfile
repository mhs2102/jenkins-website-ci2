pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/mhs2102/jenkins-website-ci2.git', branch: 'main'
            }
        }
        
        stage('Build Website') {
            steps {
                // Run the script after making it executable
                bat 'hello.bat'
            }
        }
        stage('HTML Validation') {
            steps {
                echo 'Running HTML Validation...'
            }
        }
    }
}
